<h1>All Products</h1>

<table>
  <thead>
    <tr>
      <th>Imgage</th>
      <th>Product</th>
      <th>Price</th>
      <th>Stock</th>
      <th>Buy</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product_path(product) do %>
          <%= image_tag "products/#{product.image_url}" %>
        <% end %></td>
        <td><span class="product_title"><%= product.title %></span><%= product.description %></td>
        <td><%= print_price(product.price) %></td>
        <td><%= print_stock(product.stock) %></td>
        <td><%= button_to "Add to Cart", order_items_path(product_id: product.id) %></th>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create a New Product', new_product_path, id: 'new_product' %>
